function run_test
{
	TEST_NAME=$1
	TEST_PATH=$2
	TEST_PARAMS=$3
	TEST_PROMPT_PRE=$4
	TEST_PROMPT_POST=$5
	TEST_COMMAND="$TEST_PATH $TEST_PARAMS"
	TEST_NAME_SAFE=$(echo $TEST_NAME | sed -e 's/ /_/g')
	LOGFILE=$LOGDIR/$TEST_NAME_SAFE.log

	source $TEST_COMMAND $LOGFILE

}

system_init() {
	clear
	stty erase '^H'
	stty erase '^?'	
}

end_test() {
